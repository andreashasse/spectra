{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Skill",
      "WebFetch(domain:hex.pm)",
      "WebFetch(domain:repo.hex.pm)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-start-erlang-setup.sh"
          }
        ]
      }
    ]
  }
}
